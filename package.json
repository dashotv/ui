{
  "name": "dashotv",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@clerk/clerk-react": "^4.30.7",
    "@clerk/themes": "1.7.8",
    "@dashotv/components": "0.1.8",
    "@dashotv/react-nats-context": "^1.4.4",
    "@emotion/react": "11.11.4",
    "@emotion/styled": "11.11.5",
    "@fontsource/material-icons": "^5.0.7",
    "@fontsource/roboto": "^5.0.8",
    "@mui/icons-material": "5.15.15",
    "@mui/material": "5.15.15",
    "@mui/system": "^5.15.15",
    "@mui/utils": "^5.15.14",
    "@originjs/vite-plugin-commonjs": "1.0.3",
    "@originjs/vite-plugin-federation": "^1.3.5",
    "@storybook/addon-themes": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@tanstack/react-query": "5.0.0",
    "@tanstack/react-query-devtools": "5.0.3",
    "@trivago/prettier-plugin-sort-imports": "4.2.0",
    "@types/mime": "4.0.0",
    "@types/node": "20.8.7",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@types/react-helmet": "^6.1.9",
    "@types/react-router-dom": "5.3.3",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "4.1.0",
    "axios": "1.5.1",
    "dayjs": "1.11.10",
    "lint-staged": "15.0.2",
    "nats.ws": "^1.19.1",
    "notistack": "3.0.1",
    "prettier": "3.0.3",
    "radash": "12.1.0",
    "react": "18.2.0",
    "react-app-polyfill": "3.0.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.13",
    "react-helmet-async": "1.3.0",
    "react-hook-form": "^7.48.2",
    "react-hotkeys-hook": "4.4.1",
    "react-icons": "^5.1.0",
    "react-image": "^4.1.0",
    "react-loader-spinner": "6.1.6",
    "react-router-dom": "6.23.0-pre.1",
    "react-truncate-inside": "^1.0.3",
    "react-visibility-sensor": "^5.1.1",
    "sanitize.css": "13.0.0",
    "sass": "1.75.0",
    "storybook": "^8.0.8",
    "styled-components": "^6.1.8",
    "stylelint": "15.11.0",
    "typescript": "5.2.2",
    "usehooks-ts": "2.9.1",
    "vite": "4.5.0",
    "vite-plugin-node-polyfills": "0.15.0",
    "vite-plugin-svgr": "4.1.0",
    "vite-tsconfig-paths": "4.2.1",
    "web-vitals": "3.5.0"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "preview": "yarn build && vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --watch=false",
    "checkTs": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "yarn run eslint src",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css",
    "prettify": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md,json}",
    "docker:build": "docker build -t dashotv/ui .",
    "docker:run": "docker run -it --rm --name ui -p 3000:80 dashotv/ui",
    "docker:exec": "docker exec -it ui sh",
    "docker:push": "docker push dashotv/ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "peer": "yarn dlx check-peer-dependencies",
    "update-clients": "cp -r ../runic/ui/src/client ./src/client/runic && cp -r ../rift/ui/src/client ./src/client/rift"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*/*.d.ts",
      "!src/**/*/Loadable.{js,jsx,ts,tsx}",
      "!src/**/*/messages.ts",
      "!src/**/*/types.ts",
      "!src/index.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1",
    "@hookform/devtools": "^4.3.1",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-mdx-gfm": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@types/eslint": "^8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "0.34.6",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "22.1.0",
    "vitest": "0.34.6"
  },
  "packageManager": "yarn@4.1.1"
}
